<section class="image-banner">
    <div class="image-banner__wrapper">
      <div class="image-banner__image" style="background-image: url('{{ 'placeholder-image.jpg' | asset_url }}');">
        <div class="image-banner__content">
          <h2 class="image-banner__heading">Your Banner Text Here</h2>
          <p class="image-banner__subtext">Add a description for your banner here.</p>
          <a href="#" class="image-banner__button">Click Me</a>
        </div>
      </div>
    </div>
  </section>
  
 

{% schema %}
{
  "name": "Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "banner_heading",
      "label": "Heading Text",
      "default": "Your Banner Text Here"
    },
    {
      "type": "textarea",
      "id": "banner_subtext",
      "label": "Subtext",
      "default": "Add a description for your banner here."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Click Me"
    }
  ],
  "presets": [
    {
      "name": "Default Image Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}